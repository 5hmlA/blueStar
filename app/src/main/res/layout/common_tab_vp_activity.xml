<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <april.yun.JPagerSlidingTabStrip
        android:id="@+id/sec_tab_strip"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="48dp"
        android:layoutAnimation="@anim/layanipushdown"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/sec_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jbase_tab_strip"
        android:background="@color/common_q_gray"/>
</merge>