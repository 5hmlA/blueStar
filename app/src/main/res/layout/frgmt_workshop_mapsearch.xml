<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="14dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backfinish"
        android:padding="14dp"
        android:src="@drawable/icon_btn_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/round_search_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="66dp"
            android:layout_height="24dp"
            android:layout_marginLeft="14dp">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:rotation="270"
                android:src="@drawable/icon_btn_back_black"/>

            <Spinner
                android:id="@+id/frgmt_wshorp_feature_sort_span"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:dropDownSelector="@color/colorAccent"
                android:dropDownVerticalOffset="26dp"
                android:gravity="center"
                android:popupBackground="@drawable/box_dropdown"
                android:spinnerMode="dropdown"/>
        </RelativeLayout>


        <com.blueprint.widget.JEditText
            android:id="@+id/act_raider_search_et_key"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_search_bar_bg"
            android:hint="@string/frgmt_ws_tv_map_search"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:paddingRight="60dp"
            android:textColor="@color/black333"
            android:textColorHint="@color/gray999"
            android:textSize="13dp"/>
    </LinearLayout>
</LinearLayout>