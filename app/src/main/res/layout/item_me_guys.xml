<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/selector_jbackground"
                android:paddingLeft="14dp">

    <com.blueprint.widget.JCimageView
        android:id="@+id/recv_me_sf_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"/>

    <TextSwitcher
        android:id="@+id/recv_me_sf_sw"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"/>

    <LinearLayout
        android:id="@+id/recom_middle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/recv_me_sf_icon"
        android:layout_toLeftOf="@+id/recv_me_sf_sw"
        android:layout_toRightOf="@+id/recv_me_sf_icon"
        android:layout_toStartOf="@+id/recv_me_sf_sw"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recv_me_sf_niki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333"
            android:textSize="14dp"
            tools:text="@string/recom_welfare_center"/>

        <TextView
            android:id="@+id/recv_me_sf_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray999"
            android:textSize="12dp"
            tools:text="@string/recom_welfare_desc"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/recv_me_sf_icon"
        android:background="@color/common_line"/>
</RelativeLayout>