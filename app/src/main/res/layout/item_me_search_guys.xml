<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_jbackground"
                android:gravity="center_vertical"
                android:padding="14dp">

    <ImageView
        android:id="@+id/recv_me_sf_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/recv_me_sf_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_btn_delete"/>

    <LinearLayout
        android:id="@+id/recom_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/recv_me_sf_icon"
        android:layout_toLeftOf="@+id/recv_me_sf_sw"
        android:layout_toRightOf="@+id/recv_me_sf_icon"
        android:layout_toStartOf="@+id/recv_me_sf_sw"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recv_me_sf_niki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recom_welfare_center"/>

        <TextView
            android:id="@+id/recv_me_sf_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recom_welfare_desc"/>

    </LinearLayout>
</RelativeLayout>