<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_jbackground"
              android:orientation="vertical"
              android:padding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/item_live_ing_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <FrameLayout
            android:id="@+id/item_live_type_ing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_mask_black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="top|right|end"
                android:layout_margin="@dimen/card_pading_8"
                android:background="@drawable/live_round_conor_bg"
                android:drawableLeft="@drawable/icon_ass_live"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:text="@string/item_frgmt_live_ing"
                android:textColor="@color/item_live_top_ing"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/item_live_ing_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/card_pading_8"
                android:drawableLeft="@drawable/icon_ass_user_small_white"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                tools:text="4399屌丝"/>

            <TextView
                android:id="@+id/item_live_ing_onlines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end|right"
                android:layout_margin="@dimen/card_pading_8"
                android:drawableLeft="@drawable/icon_ass_view_small_white"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                tools:text="4.3w"/>
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/item_live_ing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black333"
        android:textSize="@dimen/tab_top_textsize"
        tools:text="测试直播"/>

    <FrameLayout
        android:id="@+id/item_live_type_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/item_live_rec_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:drawableLeft="@drawable/icon_ass_user_small"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray999"
            android:textSize="12dp"
            tools:text="4399屌丝"/>

        <TextView
            android:id="@+id/item_live_rec_onlines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end|right"
            android:drawableLeft="@drawable/icon_ass_view_small"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray999"
            android:textSize="12dp"
            tools:text="4.3w"/>
    </FrameLayout>
</LinearLayout>