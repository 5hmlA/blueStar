<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/selector_jbackground"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/item_live_ing_pic"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_live_ing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black333"
        android:textSize="@dimen/tab_top_textsize"
        tools:text="测试直播"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_live_ing_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:drawableLeft="@drawable/icon_ass_user_small"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            tools:text="4399屌丝"/>

        <TextView
            android:id="@+id/item_live_ing_onlines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end|right"
            android:drawableLeft="@drawable/icon_ass_view_small"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            tools:text="4.3w"/>
    </FrameLayout>

</LinearLayout>