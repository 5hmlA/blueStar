<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/recv_msgcard_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="9dp"
        android:background="@drawable/selector_jbackground"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_raiders_tutorial_tv_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/icon_ass_greentitle"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/black333"
            android:textSize="@dimen/tab_top_textsize"
            tools:text="新手教程"/>

        <ImageView
            android:id="@+id/item_raiders_tutorial_icon"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher"/>
    </LinearLayout>
</FrameLayout>