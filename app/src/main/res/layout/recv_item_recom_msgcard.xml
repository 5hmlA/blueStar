<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@drawable/selector_jbackground"
                android:layoutAnimation="@anim/layleftin">

    <ImageView
        android:id="@+id/item_wshop_recom_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:src="@drawable/icon_welfare"/>

    <com.blueprint.widget.JDownloadProgView
        android:id="@+id/item_wshop_recom_tv_action"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:gravity="center"
        android:textSize="12dp"
        tools:text="下载"/>

    <RelativeLayout
        android:id="@+id/recom_middle"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/card_pading_8"
        android:layout_toEndOf="@+id/item_wshop_recom_icon"
        android:layout_toLeftOf="@+id/item_wshop_recom_tv_action"
        android:layout_toRightOf="@+id/item_wshop_recom_icon"
        android:layout_toStartOf="@+id/item_wshop_recom_tv_action">

        <TextView
            android:id="@+id/item_wshop_recom_adv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/recom_welfare_center"
            android:textColor="@color/black333"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/item_wshop_recom_adv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/recom_welfare_desc"
            android:textColor="@color/gray999"
            android:textSize="12dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_line"/>
</RelativeLayout>