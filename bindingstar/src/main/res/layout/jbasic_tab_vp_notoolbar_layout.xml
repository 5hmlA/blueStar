<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <april.yun.JPagerSlidingTabStrip
        android:id="@+id/jbase_tab_strip"
        app:layout_constraintTop_toBottomOf="@+id/jbase_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jbase_tabstrip_high"/>

    <com.blueprint.widget.ViewPagerFixed
        android:id="@+id/jbase_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/jbase_tab_strip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@+id/jbase_tab_strip"/>

</android.support.constraint.ConstraintLayout>