<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <april.yun.JPagerSlidingTabStrip
        android:id="@+id/jbase_tab_strip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jbase_tabstrip_high"/>

    <com.blueprint.widget.ViewPagerFixed
        android:id="@+id/jbase_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jbase_tab_strip"/>

    <com.blueprint.widget.JToolbar
        android:id="@+id/jbase_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="45dp"/>

</android.support.constraint.ConstraintLayout>